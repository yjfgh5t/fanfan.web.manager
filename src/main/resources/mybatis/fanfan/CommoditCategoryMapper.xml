<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.fanfan.dao.CommoditCategoryDao">

	<select id="get" resultType="com.bootdo.fanfan.domain.CommoditCategoryDO">
		select `id`,`name`,`order`,`create_time`,`customer_id`,`delete` from ff_commodit_category where id = #{value}
	</select>

	<select id="list" resultType="com.bootdo.fanfan.domain.CommoditCategoryDO">
		select `id`,`name`,`order`,`create_time`,`customer_id` from ff_commodit_category
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		  <if test="customerId != null and customerId != ''"> and customer_id = #{customerId} </if>
				  <if test="delete != null and delete != ''"> and `delete` = #{delete} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from ff_commodit_category
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		  <if test="customerId != null and customerId != ''"> and customer_id = #{customerId} </if>
			      <if test="delete != null and delete != ''"> and `delete` = #{delete} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.bootdo.fanfan.domain.CommoditCategoryDO" useGeneratedKeys="true" keyProperty="id">
		insert into ff_commodit_category
		(
			`name`, 
			`order`, 
			`create_time`, 
			`customer_id`,
			`delete`
		)
		values
		(
			#{name}, 
			#{order}, 
			#{createTime}, 
			#{customerId},
		    #{delete}
		)
	</insert>
	 
	<update id="update" parameterType="com.bootdo.fanfan.domain.CommoditCategoryDO">
		update ff_commodit_category 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="order != null">`order` = #{order}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="customerId != null">`customer_id` = #{customerId},</if>
			<if test="delete != null">`delete` = #{delete}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		update ff_commodit_category set `delete` =1 where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from ff_commodit_category where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>