<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.fanfan.dao.CommoditDao">

	<resultMap id="CommodityResultMap" type="com.bootdo.fanfan.domain.CommodityWidthExtendDO">
		<collection property="extendList" select="queryExtendDetail" ofType="com.bootdo.fanfan.domain.CommodityExtendDO" column="commodityId={id}" />
	</resultMap>
	<resultMap id="ExtendResultMap" type="com.bootdo.fanfan.domain.CommodityExtendDO"></resultMap>

	<select id="get" resultType="com.bootdo.fanfan.domain.CommoditDO">
		select `id`,`category_id`,`commodit_title`,`commodit_img`,`commodit_price`,`commodit_sale_price`,`commodit_remark`,`commodit_fiex_num`,`commodit_unit`,`status`,`create_time`,`customer_id`,`order`,`commodit_type`,`delete`,`must_order` from ff_commodit where id = #{value}
	</select>

	<select id="list" resultType="com.bootdo.fanfan.domain.CommoditDO">
		select `id`,`category_id`,`commodit_title`,`commodit_img`,`commodit_price`,`commodit_sale_price`,`commodit_remark`,`commodit_fiex_num`,`commodit_unit`,`status`,`create_time`,`customer_id`,`order`,`commodit_type`,`delete`,`must_order` from ff_commodit
        <where> `delete` = 0
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="commoditTitle != null and commoditTitle != ''"> and commodit_title = #{commoditTitle} </if>
		  		  <if test="commoditImg != null and commoditImg != ''"> and commodit_img = #{commoditImg} </if>
		  		  <if test="commodityPrice != null and commodityPrice != ''"> and commodit_price = #{commodityPrice} </if>
		  		  <if test="commoditSalePrice != null and commoditSalePrice != ''"> and commodit_sale_price = #{commoditSalePrice} </if>
		  		  <if test="commoditRemark != null and commoditRemark != ''"> and commodit_remark = #{commoditRemark} </if>
		  		  <if test="commoditFiexNum != null and commoditFiexNum != ''"> and commodit_fiex_num = #{commoditFiexNum} </if>
		  		  <if test="status != null and status != ''"> and status = #{status} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		  <if test="customerId != null and customerId != ''"> and customer_id = #{customerId} </if>
		  		  <if test="commoditType != null and commoditType != ''"> and commodit_type = #{commoditType} </if>
				  <if test="categoryId != null and categoryId != ''"> and category_id = #{categoryId} </if>
	  </where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from ff_commodit
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="commoditTitle != null and commoditTitle != ''"> and commodit_title = #{commoditTitle} </if>
		  		  <if test="commoditImg != null and commoditImg != ''"> and commodit_img = #{commoditImg} </if>
		  		  <if test="commodityPrice != null and commodityPrice != ''"> and commodit_price = #{commodityPrice} </if>
		  		  <if test="commoditSalePrice != null and commoditSalePrice != ''"> and commodit_sale_price = #{commoditSalePrice} </if>
		  		  <if test="commoditRemark != null and commoditRemark != ''"> and commodit_remark = #{commoditRemark} </if>
		  		  <if test="commoditFiexNum != null and commoditFiexNum != ''"> and commodit_fiex_num = #{commoditFiexNum} </if>
		  		  <if test="status != null and status != ''"> and status = #{status} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		  <if test="customerId != null and customerId != ''"> and customer_id = #{customerId} </if>
		  		  <if test="commoditType != null and commoditType != ''"> and commodit_type = #{commoditType} </if>
		  		  <if test="delete != null and delete != ''"> and delete = #{delete} </if>
			  	  <if test="categoryId != null and categoryId != ''"> and category_id = #{categoryId} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.bootdo.fanfan.domain.CommoditDO" useGeneratedKeys="true" keyProperty="id">
		insert into ff_commodit
		(
			`category_id`,
			`commodit_title`, 
			`commodit_img`, 
			`commodit_price`, 
			`commodit_sale_price`, 
			`commodit_remark`, 
			`commodit_fiex_num`,
			`commodit_unit`,
			`status`, 
			`create_time`, 
			`customer_id`,
			`order`, 
			`commodit_type`, 
			`delete`,
			`must_order`
		)
		values
		(
			#{categoryId},
			#{commoditTitle}, 
			#{commoditImg}, 
			#{commodityPrice},
			#{commoditSalePrice}, 
			#{commoditRemark}, 
			#{commoditFiexNum},
			#{commoditUnit},
			#{status}, 
			#{createTime}, 
			#{customerId},
			#{order}, 
			#{commoditType}, 
			#{delete},
			#{mustOrder}
		)
	</insert>
	 
	<update id="update" parameterType="com.bootdo.fanfan.domain.CommoditDO">
		update ff_commodit 
		<set>
			<if test="categoryId != null">`category_id` = #{categoryId}, </if>
			<if test="commoditTitle != null">`commodit_title` = #{commoditTitle}, </if>
			<if test="commoditImg != null">`commodit_img` = #{commoditImg}, </if>
			<if test="commodityPrice != null">`commodit_price` = #{commodityPrice}, </if>
			<if test="commoditSalePrice != null">`commodit_sale_price` = #{commoditSalePrice}, </if>
			<if test="commoditRemark != null">`commodit_remark` = #{commoditRemark}, </if>
			<if test="commoditFiexNum != null">`commodit_fiex_num` = #{commoditFiexNum}, </if>
			<if test="commoditUnit != null">`commodit_unit` = #{commoditUnit}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="customerId != null">`customer_id` = #{customerId}, </if>
			<if test="order != null">`order` = #{order}, </if>
			<if test="commoditType != null">`commodit_type` = #{commoditType}, </if>
			<if test="delete != null">`delete` = #{delete},</if>
			<if test="mustOrder != null">`must_order` = #{mustOrder} </if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		update ff_commodit set delete=1 where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from ff_commodit where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

	<select id="queryExtends" resultMap="CommodityResultMap">
		SELECT `id`,`category_id`,`commodit_title`,`commodit_img`,`commodit_price`,`commodit_sale_price`,`commodit_remark`,`commodit_fiex_num`,`commodit_unit`,`status`,`customer_id`,`order`,`commodit_type`,`must_order` from ff_commodit
		WHERE  `delete` = 0
		<if test="customerId != null and customerId != ''"> and customer_id = #{customerId} </if>
		<choose>
			<when test="sort != null and sort.trim() != ''">
				order by ${sort} ${order}
			</when>
		</choose>
	</select>

	<select id="queryExtendDetail" resultMap="ExtendResultMap">
		select `id`,`commodity_price`,`type`,`commodity_id`,``title` from ff_commodity_extend where `delete` = 0 AND commodity_id = #{commodityId}
	</select>
	
</mapper>