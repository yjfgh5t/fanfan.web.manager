<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.fanfan.dao.OrderReceiverDao">

	<select id="get" resultType="com.bootdo.fanfan.domain.OrderReceiverDO">
		select `id`,`tel`,`name`,`sex`,`addr`,`addr_detail`,`lat`,`lng`,`delivery_range`,`delivery_name`,`delivery_tel`,`update_time` from ff_order_receiver where id = #{value}
	</select>

	<select id="list" resultType="com.bootdo.fanfan.domain.OrderReceiverDO">
		select `id`,`tel`,`name`,`sex`,`addr`,`addr_detail`,`lat`,`lng`,`delivery_range`,`delivery_name`,`delivery_tel`,`update_time` from ff_order_receiver
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="tel != null and tel != ''"> and tel = #{tel} </if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
		  		  <if test="sex != null and sex != ''"> and sex = #{sex} </if>
		  		  <if test="addr != null and addr != ''"> and addr = #{addr} </if>
		  		  <if test="addrDetail != null and addrDetail != ''"> and addr_detail = #{addrDetail} </if>
		  		  <if test="lat != null and lat != ''"> and lat = #{lat} </if>
		  		  <if test="lng != null and lng != ''"> and lng = #{lng} </if>
		  		  <if test="deliveryRange != null and deliveryRange != ''"> and delivery_range = #{deliveryRange} </if>
		  		  <if test="deliveryName != null and deliveryName != ''"> and delivery_name = #{deliveryName} </if>
		  		  <if test="deliveryTel != null and deliveryTel != ''"> and delivery_tel = #{deliveryTel} </if>
		  		  <if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from ff_order_receiver
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="tel != null and tel != ''"> and tel = #{tel} </if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
		  		  <if test="sex != null and sex != ''"> and sex = #{sex} </if>
		  		  <if test="addr != null and addr != ''"> and addr = #{addr} </if>
		  		  <if test="addrDetail != null and addrDetail != ''"> and addr_detail = #{addrDetail} </if>
		  		  <if test="lat != null and lat != ''"> and lat = #{lat} </if>
		  		  <if test="lng != null and lng != ''"> and lng = #{lng} </if>
		  		  <if test="deliveryRange != null and deliveryRange != ''"> and delivery_range = #{deliveryRange} </if>
		  		  <if test="deliveryName != null and deliveryName != ''"> and delivery_name = #{deliveryName} </if>
		  		  <if test="deliveryTel != null and deliveryTel != ''"> and delivery_tel = #{deliveryTel} </if>
		  		  <if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.bootdo.fanfan.domain.OrderReceiverDO">
		insert into ff_order_receiver
		(
			`id`, 
			`tel`, 
			`name`, 
			`sex`, 
			`addr`, 
			`addr_detail`, 
			`lat`, 
			`lng`, 
			`delivery_range`, 
			`delivery_name`, 
			`delivery_tel`, 
			`update_time`
		)
		values
		(
			#{id}, 
			#{tel}, 
			#{name}, 
			#{sex}, 
			#{addr}, 
			#{addrDetail}, 
			#{lat}, 
			#{lng}, 
			#{deliveryRange}, 
			#{deliveryName}, 
			#{deliveryTel}, 
			#{updateTime}
		)
	</insert>
	 
	<update id="update" parameterType="com.bootdo.fanfan.domain.OrderReceiverDO">
		update ff_order_receiver 
		<set>
			<if test="tel != null">`tel` = #{tel}, </if>
			<if test="name != null">`name` = #{name}, </if>
			<if test="sex != null">`sex` = #{sex}, </if>
			<if test="addr != null">`addr` = #{addr}, </if>
			<if test="addrDetail != null">`addr_detail` = #{addrDetail}, </if>
			<if test="lat != null">`lat` = #{lat}, </if>
			<if test="lng != null">`lng` = #{lng}, </if>
			<if test="deliveryRange != null">`delivery_range` = #{deliveryRange}, </if>
			<if test="deliveryName != null">`delivery_name` = #{deliveryName}, </if>
			<if test="deliveryTel != null">`delivery_tel` = #{deliveryTel}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from ff_order_receiver where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from ff_order_receiver where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

	<select id="getByIdArray" resultType="com.bootdo.fanfan.domain.OrderReceiverDO">
		select `id`,`tel`,`name`,`sex`,`addr`,`addr_detail`,`lat`,`lng`,`delivery_range`,`delivery_name`,`delivery_tel` FROM ff_order_receiver
		WHERE id IN
		<foreach collection="idArray" open="(" close=")" separator="," item="item">
			#{item}
		</foreach>
	</select>

</mapper>