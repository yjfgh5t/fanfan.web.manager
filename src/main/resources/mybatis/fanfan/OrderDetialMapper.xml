<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.fanfan.dao.OrderDetialDao">

	<select id="get" resultType="com.bootdo.fanfan.domain.OrderDetialDO">
		select `id`,`order_id`,`out_id`,`out_title`,`out_price`,`out_size`,`out_type` from ff_order_detial where id = #{value}
	</select>

	<select id="list" resultType="com.bootdo.fanfan.domain.OrderDetialDO">
		select `id`,`order_id`,`out_id`,`out_title`,`out_price`,`out_size`,`out_type` from ff_order_detial
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="orderId != null and orderId != ''"> and order_id = #{orderId} </if>
		  		  <if test="outId != null and outId != ''"> and out_id = #{outId} </if>
		  		  <if test="outTitle != null and outTitle != ''"> and out_title = #{outTitle} </if>
		  		  <if test="outPrice != null and outPrice != ''"> and out_price = #{outPrice} </if>
		  		  <if test="outSize != null and outSize != ''"> and out_size = #{outSize} </if>
		  		  <if test="outType != null and outType != ''"> and out_type = #{outType} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from ff_order_detial
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="orderId != null and orderId != ''"> and order_id = #{orderId} </if>
		  		  <if test="outId != null and outId != ''"> and out_id = #{outId} </if>
		  		  <if test="outTitle != null and outTitle != ''"> and out_title = #{outTitle} </if>
		  		  <if test="outPrice != null and outPrice != ''"> and out_price = #{outPrice} </if>
		  		  <if test="outSize != null and outSize != ''"> and out_size = #{outSize} </if>
		  		  <if test="outType != null and outType != ''"> and out_type = #{outType} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.bootdo.fanfan.domain.OrderDetialDO" useGeneratedKeys="true" keyProperty="id">
		insert into ff_order_detial
		(
			`order_id`, 
			`out_id`, 
			`out_title`, 
			`out_price`, 
			`out_size`, 
			`out_type`
		)
		values
		(
			#{orderId}, 
			#{outId}, 
			#{outTitle}, 
			#{outPrice}, 
			#{outSize}, 
			#{outType}
		)
	</insert>
	 
	<update id="update" parameterType="com.bootdo.fanfan.domain.OrderDetialDO">
		update ff_order_detial 
		<set>
			<if test="orderId != null">`order_id` = #{orderId}, </if>
			<if test="outId != null">`out_id` = #{outId}, </if>
			<if test="outTitle != null">`out_title` = #{outTitle}, </if>
			<if test="outPrice != null">`out_price` = #{outPrice}, </if>
			<if test="outSize != null">`out_size` = #{outSize}, </if>
			<if test="outType != null">`out_type` = #{outType}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from ff_order_detial where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from ff_order_detial where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

	<select id="queryCommodityImgByOrderId" resultType="java.lang.String">
		select commodit_img  from ff_commodit where id= (select min(out_id) from ff_order_detial where order_id=#{orderId} and out_type=1)
	</select>

</mapper>